{% if quotes %}
<section class="js-slider slider">

  <div class="container slider__container">

    {% for q in quotes|randomiseArray %}
    <blockquote class="slider__slide">
      <p class="slider__quote">{{ q.quote|nl2br|safe }}</p>
      <footer class="slider__attribute">{{ q.attr }}</footer>
    </blockquote>
    {% endfor %}

  </div>

</section>
{% endif %}
