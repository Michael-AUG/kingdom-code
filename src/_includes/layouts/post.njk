---
nav: true;
layout: layouts/base.njk
---
<div class="container kc-blog">

  <header role="banner" class="kc-blog__header">
    {% if hero_img %}
    <img src="{{ hero_img }}" alt="{{ title }}" class="kc-blog__header__img" />
    {% endif %}

    <h1 itemprop="name">{{ title }}</h1>
    <date>{{ date | readableDate }}</date>
  </header>

  <main class="kc-blog__body">
    {{ layoutContent | safe }}
  </main>

  <a class="kc-blog__back" href="/blog">Back to all posts</a>

  {% if canonical %}
  <small class="thought-canonical">This post originally appeared at:<br /><a href="{{ canonical }}">{{ canonical }}<a/></small>
  {% endif %}

</div>
