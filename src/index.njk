{% include "blocks/build.njk" %}


{% include "blocks/events.njk" %}

{% set post = collections.posts|reverse|first %}

<section class="promo promo--flipped mt-4 md:mt-16" style="background-image: url({{ post.data.hero_img }});">

  <a class="promo__content" href="{{ post.url }}">

    <p class="promo__content__tag">Latest blog post</p>
    <h2 class="text-2xl text-orange font-bold">{{ post.data.title }}</h2>

    {% if post.data.intro %}
      <p class="mb-2">{{ post.data.intro }}</p>
    {% endif %}

    <p>
      <span class="promo__content__button">
        Keep reading
      </span>
    </p>
  </a>
</section>


